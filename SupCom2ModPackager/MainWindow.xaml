<Window x:Class="SupCom2ModPackager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupCom2ModPackager"
        xmlns:controls="clr-namespace:SupCom2ModPackager.Controls"
        mc:Ignorable="d"
        Title="Supreme Commander 2 Mod Packager" Height="450" Width="800">
    <Grid Margin="10,10,10,10">
        <TabControl>
            <TabItem Header="Manager">
                <controls:DisplayItemsControl/>
            </TabItem>
            <TabItem Header="Packager">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Downloader">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Sources">
                <controls:SourcesViewControl x:Name="SourcesView" />
            </TabItem>
        </TabControl>
        <!-- Margin="102,0,76,400" -->
        <!-- Floating ExtractionProgress -->
    </Grid>
</Window>
    
