<UserControl x:Class="SupCom2ModPackager.Controls.PathLinkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupCom2ModPackager.Controls"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    <StackPanel x:Name="PathPanel" Orientation="Horizontal" >
        <Button Content="C:" />
        <Button Content="\path1" />
        <Button Content="\path2" />
    </StackPanel>
</UserControl>
