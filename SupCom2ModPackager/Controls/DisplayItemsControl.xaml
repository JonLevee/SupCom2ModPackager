<UserControl x:Class="SupCom2ModPackager.Controls.DisplayItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupCom2ModPackager.Controls"
             xmlns:controls="clr-namespace:SupCom2ModPackager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel 
            x:Name="ExtractionProgress" 
            Visibility="Hidden"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Background="White" 
            Opacity="1" 
            Panel.ZIndex="200" 
            Width="574" 
            Height="45" 
            Margin="0,100,0,0">
            <ProgressBar x:Name="ExtractionProgressBar" Height="20" Minimum="0" Maximum="100" />
            <TextBlock x:Name="CurrentFileTextBlock" Margin="0,5,0,0" Text="Ready" TextAlignment="Left" />
        </StackPanel>
        <StackPanel Margin="0,0,0,0">
            <controls:PathLinkControl x:Name="PathLink" HorizontalAlignment="Left" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <DataGrid 
                    x:Name="PathDataGrid" 
                    AutoGenerateColumns="False" 
                    Margin="0,0,0,0" 
                    Height="370" 
                    Width="512"
                    HorizontalAlignment="Left"
                    MouseLeftButtonUp="ActionClicked" 
                    SelectionMode="Single" 
                    SelectionUnit="FullRow"
                    CanUserSortColumns="True"
                    Sorting="PathDataGrid_Sorting"
                    >
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <!-- Setter Property="IsHitTestVisible" Value="False" /-->
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Name" SortMemberPath="NameSort" Width="*" SortDirection="Ascending" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Modified" SortMemberPath="ModifiedSort" Width="160" SortDirection="Ascending"  CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>  
                                   <TextBlock Text="{Binding Modified, StringFormat='{}{0:MM/dd/yyyy h:mm tt}'}" />  
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Width="287" Height="auto" Orientation="Vertical">
                    <StackPanel Width="auto" Height="auto" Orientation="Horizontal">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                            <TextBlock Text="Command" FontWeight="DemiBold"/>
                        </Border>
                        <Button x:Name="CommandUnpack" Content="Unpack" Width="Auto" Height="Auto" Margin="5,0,0,0" Click="CommandUnpack_Click"/>
                        <Button x:Name="CommandPack" Content="Pack" Width="Auto" Height="Auto" Margin="5,0,0,0" Click="CommandPack_Click"/>
                    </StackPanel>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                       <TextBlock Text="profile.yml"/>
                   </Border>
                </StackPanel>

            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
