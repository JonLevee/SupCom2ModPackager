<UserControl x:Class="SupCom2ModPackager.Controls.DisplayItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupCom2ModPackager.Controls"
             xmlns:controls="clr-namespace:SupCom2ModPackager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:PathLinkControl 
            x:Name="PathLink" 
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- DataGrid -->
                <ColumnDefinition Width="800" />
                <!-- Fixed-width StackPanel -->
            </Grid.ColumnDefinitions>
            <DataGrid 
                    x:Name="PathDataGrid" 
                    Grid.Column="0"
                    AutoGenerateColumns="False" 
                    Margin="0,0,0,0" 
                    HorizontalAlignment="Left"
                    MouseLeftButtonUp="ActionClicked" 
                    SelectionMode="Single" 
                    SelectionUnit="FullRow"
                    CanUserSortColumns="True"
                    Sorting="PathDataGrid_Sorting">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <!-- Add any row-specific styling here -->
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Name" SortMemberPath="NameSort" Width="*" SortDirection="Ascending" CanUserSort="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock 
                                        Grid.Row="0"
                                        Text="{Binding Name}" 
                                        Visibility="{Binding ColumnsVisible}" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Stretch" />
                                    <TextBlock 
                                        Grid.Row="1"
                                        Text="{Binding StatusText}" 
                                        Visibility="{Binding StatusTextVisible}"
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Stretch" />
                                    <ProgressBar 
                                        Grid.Row="2"
                                        Value="{Binding ProgressValue}" 
                                        Minimum="0"
                                        Maximum="{Binding ProgressMaximum}" 
                                        Height="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualHeight}" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Stretch" 
                                        Visibility="{Binding ProgressVisible}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Modified" SortMemberPath="ModifiedSort" Width="160" SortDirection="Ascending" CanUserSort="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Modified, StringFormat='{}{0:MM/dd/yyyy h:mm tt}'}" Visibility="{Binding ColumnsVisible}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Label -->
                        <ColumnDefinition Width="*" />
                        <!-- Buttons -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Command:"
                        VerticalAlignment="Center"
                        FontWeight="DemiBold"
                        Margin="5" />
                    <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="5">
                        <Button x:Name="CommandUnpack" Content="Unpack" Margin="2" Click="CommandUnpack_Click" />
                        <Button x:Name="CommandPack" Content="Pack" Margin="2" Click="CommandPack_Click" />
                    </StackPanel>
                </Grid>

                <WebBrowser 
                    x:Name="ContentDisplay"
                    Grid.Row="1"
                    Margin="5" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
